<assembly
	xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
	<id>sources</id>
	<formats>
		<format>zip</format>
	</formats>
	<fileSets>
		<fileSet>
			<directory>${jesb.basedir}</directory>
			<outputDirectory>/</outputDirectory>
			<useDefaultExcludes>true</useDefaultExcludes>
			<includes>
				<include>LICENSE</include>
				<include>*.ico</include>
				<include>*.png</include>
				<include>*.gif</include>
				<include>*.xml</include>
				<include>src/**</include>
				<include>unpackaged-src/**</include>
				<include>test-specifications/**</include>
				<include>plugins/*/LICENSE</include>
				<include>plugins/*/src/**</include>
				<include>plugins/*/*.xml</include>
				<include>plugins/*/test-specifications/**</include>
				<include>assembly/*.xml</include>
				<include>assembly/misc/jvm/**</include>
			</includes>
			<excludes>
				<exclude>**/.*</exclude>
			</excludes>
		</fileSet>
	</fileSets>
</assembly>